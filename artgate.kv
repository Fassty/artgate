<RoundedButtonSmall@Button>
    background_color: (0, 0, 0, 0)
    background_normal: ''
    back_color: (1, 1, 1, 1)
    border_radius: [20]
    canvas.before:
        Color:
            rgba: self.back_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: self.border_radius

<StrokeButtonSmall@HoverBehavior, Button>
    background_color: (0, 0, 0, 0)
    background_normal: ''
    stroke_color: (0, 0, 0, 1)
    stroke_width: 0.95
    stroke_radius: 17
    color: self.stroke_color
    canvas.before:
        Color:
            rgba: (0.3, 0.64, 0.92, 0)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [17]
    canvas.after:
        Color:
            rgba: self.stroke_color
        Line:
            rounded_rectangle: (self.pos[0], self.pos[1], self.size[0], self.size[1], self.stroke_radius)
            width: self.stroke_width

<StrokeButtonLarge@Button>
    background_color: (0, 0, 0, 0)
    background_normal: ''
    stroke_color: (0, 0, 0, 1)
    stroke_width: 1.1
    stroke_radius: 20
    color: self.stroke_color
    canvas.after:
        Color:
            rgba: self.stroke_color
        Line:
            rounded_rectangle: (self.pos[0], self.pos[1], self.size[0], self.size[1], self.stroke_radius)
            width: self.stroke_width