<MainScreen>
    slider_image: 'data/images/slider_cropped.png'
    AnchorLayout:
        canvas.before:
            Color:
                rgba: (1,1,1,1)
            Rectangle:
                size: self.size
                pos: self.pos
        size: root.width, root.height
        BoxLayout:
            size_hint: 0.6, 0.8
            orientation: "vertical"
            spacing: 5
            padding: [0, 20, 0, 0]
            BoxLayout:
                orientation: "vertical"
                size_hint: 1, 0.4
                spacing: 5
                Label:
                    text: "How much art do you want?"
                    font_size: 20
                    color: (0, 0, 0, 1)
                StrokeButtonLarge:
                    text: "I want it all yeah yeah yeah, I want it all, I want it all and I want it now..."
                    stroke_color: (0, 0, 0, 1)
                    stroke_width: 1.05
                    color: (0, 0, 0, 1)
                    stroke_radius: 15
            BoxLayout:
                orientation: "vertical"
                size_hint: 1, 0.4
                Label:
                    text: "How much overlay do you want?"
                    font_size: 20
                    color: (0, 0, 0, 1)
                OverlaySlider:
                    padding: 0.265 * self.size[0]
                    cursor_size: (0.5 * self.size[0], self.size[1])
            BoxLayout:
                orientation: "vertical"
                spacing: 5
                Label:
                    text: "What art do you want to see?"
                    font_size: 20
                    size_hint: 1, .2
                    color: (0, 0, 0, 1)
                GridLayout:
                    cols: 3
                    spacing: 10
                    padding: 5
                    StrokeButtonSmall:
                        text: "Painting"
                        stroke_width: 10
                    StrokeButtonSmall:
                        text: "Illustration"
                    StrokeButtonSmall:
                        text: "Photography"
                    StrokeButtonSmall:
                        text: "Portrait"
                    StrokeButtonSmall:
                        text: "Typography"
                    StrokeButtonSmall:
                        text: "Landscape"
                    StrokeButtonSmall:
                        text: "Collage"
                    StrokeButtonSmall:
                        text: "under 30"
                    StrokeButtonSmall:
                        text: "Sculpture"
            BoxLayout:
                size_hint: 1, .4
                orientation: "vertical"
                spacing: 5
                Label:
                    text: "Your monthly plan"
                    font_size: 20
                    size_hint: 1, .4
                    color: (0, 0, 0, 1)
                BoxLayout:
                    spacing: 10
                    padding: 5
                    StrokeButtonSmall:
                        text: "5$"
                    StrokeButtonSmall:
                        text: "10$"
                    StrokeButtonSmall:
                        text: "Medici"
    AnchorLayout:
        size: root.width, root.height
        anchor_x: "right"
        anchor_y: "top"
        BoxLayout:
            size_hint: .1, .095
            padding: 5
            spacing: 5
            orientation: "horizontal"
            anchor_x: "right"
            anchor_y: "top"
            MinimizeButton:
                stroke_radius: 19
            ExitButton:
                stroke_radius: 19


<RoundedButtonSmall@Button>
    background_color: (0, 0, 0, 0)
    background_normal: ''
    back_color: (1, 1, 1, 1)
    border_radius: [20]
    canvas.before:
        Color:
            rgba: self.back_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: self.border_radius

<StrokeButtonSmall@HoverBehavior, Button>
    background_color: (0, 0, 0, 0)
    background_normal: ''
    stroke_color: (0, 0, 0, 1)
    stroke_width: 0.95
    stroke_radius: 17
    color: self.stroke_color
    canvas.before:
        Color:
            rgba: (0.3, 0.64, 0.92, 0)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [17]
    canvas.after:
        Color:
            rgba: self.stroke_color
        Line:
            rounded_rectangle: (self.pos[0], self.pos[1], self.size[0], self.size[1], self.stroke_radius)
            width: self.stroke_width

<StrokeButtonLarge@Button>
    background_color: (0, 0, 0, 0)
    background_normal: ''
    stroke_color: (0, 0, 0, 1)
    stroke_width: 1.1
    stroke_radius: 20
    color: self.stroke_color
    canvas.after:
        Color:
            rgba: self.stroke_color
        Line:
            rounded_rectangle: (self.pos[0], self.pos[1], self.size[0], self.size[1], self.stroke_radius)
            width: self.stroke_width